{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Sender (Debug)",
            "request": "launch",
            "program": "${workspaceFolder}/build/src/Debug/ovbsend.exe",
            "preLaunchTask": "",
            "args": [
                "--file",
                "${workspaceFolder}\\resources\\carphone_qcif.y4m",
                "--codec",
                "OVC",
                "--ip",
                "127.0.0.1",
                "--port",
                "4444",
                "--log-level",
                "details"
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "integratedTerminal",
            "type": "cppvsdbg",
        },
        {
            "name": "Launch Relay (Debug)",
            "request": "launch",
            "program": "${workspaceFolder}/build/src/Debug/ovbrelay.exe",
            "preLaunchTask": "",
            "args": [
                "--recv-port",
                "4444",
                "--send-ip",
                "127.0.0.1",
                "--send-port",
                "8888",
                "--tamper-config",
                    "--prob=0",
                "--drop-type",
                "bursty",
                "--drop-config",
                    "--hg=0,--hb=1,--p=0.05,--r=0.5",
                "--log-level",
                "details"
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "integratedTerminal",
            "type": "cppvsdbg",
        },
        {
            "name": "Launch Receiver (Debug)",
            "request": "launch",
            "program": "${workspaceFolder}/build/src/Debug/ovbrecv.exe",
            "preLaunchTask": "",
            "args": [
                "--file",
                "${workspaceFolder}\\resources\\out.y4m",
                "--codec",
                "OVC",
                "--port",
                "8888",
                "--log-level",
                "details"
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "integratedTerminal",
            "type": "cppvsdbg",
        },
    ]
}