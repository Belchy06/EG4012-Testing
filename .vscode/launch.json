{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Sender (Debug)",
            "request": "launch",
            "program": "${workspaceFolder}/build/src/Debug/ovbsend.exe",
            "preLaunchTask": "",
            "args": [
                "--file",
                "${workspaceFolder}\\resources\\carphone_qcif.y4m",
                "--codec",
                "VVC",
                // "--encoder-config",
                // "--format=400",
                "--encoder-config",
                "--ovc-bits-per-pixel=2,--ovc-repeat-vps=1,--ovc-num-parts-exp=2,--ovc-num-levels=3,--ovc-wavelet-family=biorthogonal,--ovc-wavelet-config=11,--ovc-partition-type=offset-zerotree,--ovc-spiht=enable,--ovc-entropy-coder=arithmetic",
                "--encoder-config",
                "--xvc-num-ref-pics=0,--xvc-max-key-pic-distance=0,--xvc-qp=10",
                "--encoder-config",
                "--vvc-gop-size=1,--vvc-intra-period=1",
                "--ip",
                "127.0.0.1",
                "--port",
                "4444",
                "--log-level",
                "details",

            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "integratedTerminal",
            "type": "cppvsdbg",
        },
        {
            "name": "Launch Relay (Debug)",
            "request": "launch",
            "program": "${workspaceFolder}/build/src/Debug/ovbrelay.exe",
            "preLaunchTask": "",
            "args": [
                "--recv-port",
                "4444",
                "--send-ip",
                "127.0.0.1",
                "--send-port",
                "8888",
                "--tamper-config",
                "--prob=0",
                "--drop-type",
                "complex_bursty",
                "--drop-config",
                "--hg=0,--hb=0.9998,--p1=0.0031,--p2=0.0034,--p3=0.0036,--p4=0.1004,q=0.2786",
                "--log-level",
                "details",
                "--seed",
                "1337"
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "integratedTerminal",
            "type": "cppvsdbg",
        },
        {
            "name": "Launch Receiver (Debug)",
            "request": "launch",
            "program": "${workspaceFolder}/build/src/Debug/ovbrecv.exe",
            "preLaunchTask": "",
            "args": [
                "--file",
                "${workspaceFolder}\\output\\vvc\\out.y4m",
                "--codec",
                "VVC",
                "--port",
                "8888",
                "--log-level",
                "verbose",
                "--decoder-config",
                "--vvc-error-handling-flags=try-continue",
                "--decoder-config",
                "--ovc-error-concealment=average-received",
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "integratedTerminal",
            "type": "cppvsdbg",
        },
    ]
}