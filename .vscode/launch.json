{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Sender (Debug)",
            "request": "launch",
            "program": "${workspaceFolder}/build/src/Debug/ovbsend.exe",
            "preLaunchTask": "",
            "args": [
                "--file",
                "${workspaceFolder}\\resources\\carphone_qcif.y4m",
                "--codec",
                "OVC",
                "--encoder-config",
                    "--ovc-bits-per-pixel=4,--ovc-repeat-vps=1,--ovc-num-parts-exp=2,--ovc-num-levels=3,--ovc-wavelet-family=biorthogonal,--ovc-wavelet-config=11,--ovc-partition-type=offset-zerotree,--ovc-spiht=enable,--ovc-entropy-coder=arithmetic",
                "--encoder-config",
                    "--xvc-num-ref-pics=0,--xvc-max-key-pic-distance=0",
                "--encoder-config",
                    "--vvc-gop-size=1,--vvc-intra-period=1",
                "--ip",
                "127.0.0.1",
                "--port",
                "4444",
                "--log-level",
                "info"
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "integratedTerminal",
            "type": "cppvsdbg",
        },
        {
            "name": "Launch Relay (Debug)",
            "request": "launch",
            "program": "${workspaceFolder}/build/src/Debug/ovbrelay.exe",
            "preLaunchTask": "",
            "args": [
                "--recv-port",
                "4444",
                "--send-ip",
                "127.0.0.1",
                "--send-port",
                "8888",
                "--tamper-config",
                    "--prob=0",
                "--drop-type",
                "bursty",
                "--drop-config",
                    "--hg=0,--hb=0,--p=0,--r=0",
                "--log-level",
                "verbose",
                "--seed",
                "1337"
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "integratedTerminal",
            "type": "cppvsdbg",
        },
        {
            "name": "Launch Receiver (Debug)",
            "request": "launch",
            "program": "${workspaceFolder}/build/src/Debug/ovbrecv.exe",
            "preLaunchTask": "",
            "args": [
                "--file",
                "${workspaceFolder}\\resources\\out.y4m",
                "--codec",
                "OVC",
                "--port",
                "8888",
                "--log-level",
                "verbose"
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "integratedTerminal",
            "type": "cppvsdbg",
        },
    ]
}