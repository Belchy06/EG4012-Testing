{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Sender (Debug)",
            "request": "launch",
            "program": "${workspaceFolder}\\bin\\sender.exe",
            "preLaunchTask": "Build Sender (Debug)",
            "args": [
                "-file",
                "${workspaceFolder}\\resources\\carphone_qcif.y4m",
                "-codec",
                // "H265",
                "XVC",
                "-ip",
                "127.0.0.1",
                "-port",
                "8888"
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "integratedTerminal",
            "type": "cppvsdbg",
        },
        {
            "name": "Launch Receiver (Debug)",
            "request": "launch",
            "program": "${workspaceFolder}\\bin\\receiver.exe",
            "preLaunchTask": "Build Receiver (Debug)",
            "args": [
                "-file",
                "${workspaceFolder}\\resources\\out.y4m",
                "-codec",
                "XVC",
                "-port",
                "8888"
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "integratedTerminal",
            "type": "cppvsdbg",
        }
    ]
}