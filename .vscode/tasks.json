{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build Sender",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/I${workspaceFolder}\\common",
                "/Fe${workspaceFolder}\\bin\\sender.exe",
                "${workspaceFolder}\\sender\\y4m_reader.cpp",
                "${workspaceFolder}\\sender\\sender.cpp",
                "${workspaceFolder}\\sender\\main.cpp"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "type": "cppbuild",
            "label": "Build Receiver",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fe${workspaceFolder}\\bin\\receiver.exe",
                "${workspaceFolder}\\receiver\\receiver.cpp"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        }
    ],
    "version": "2.0.0"
}